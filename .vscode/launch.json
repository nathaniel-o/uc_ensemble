    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Chromium against localhost",
            "url": "http://localhost:80/uc.com/wp-admin",
            "webRoot": "${workspaceFolder}",
            "port": 9222
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost/uc.com/wp-login.php",
            "webRoot": "${workspaceFolder}",
            "userDataDir": true
        },
        {
            "name": "Brave",
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "url": "http://localhost:80/wordpress-fresh1/",
            "userDataDir": true,
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/usr/bin/brave-browser-stable"
        }
    ]
}
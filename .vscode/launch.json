{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Chromium against localhost",
            "url": "http://localhost/uc.co/wp-admin",
            "webRoot": "${workspaceFolder}",
            "port": 9222
        },
        {
            "name": "Launch Chrome against localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost/uc.co/wp-login.php",
            "userDataDir": "/tmp/vscode-chrome-debug",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/usr/bin/google-chrome",
            "runtimeArgs": [
                "--disable-extensions",
                "--disable-background-networking"
            ],
            "timeout": 30000,
            "trace": true
        },
        {
            "name": "Brave",
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "url": "http://localhost:80/wordpress-fresh1/",
            "userDataDir": true,
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/usr/bin/brave-browser-stable"
        }
        ,
        {
            "name": "Chrome Minimal Test",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost/uc.co/wp-login.php",
            "timeout": 30000,
            "disableNetworkCache": true,
            "trace": true
        },
        {
            "name": "Attach to Chrome on 9222",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "urlFilter": "http://localhost/uc.co/*",
            "webRoot": "${workspaceFolder}",
            "timeout": 10000,
            "trace": true
        }
    ]
} 